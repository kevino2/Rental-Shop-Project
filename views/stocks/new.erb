<h1>New Stock Item</h1>
<form action="/stock" method="POST">
  <label for="stock_item">Stock Item:</label>
  <input type="text" id="stock_item" name="stock_item" required>


    <select name="size" id="size" required>
      <option value="" selected disabled>Select a size</option>
      <option value="Small">Small</option>
      <option value="Medium">Medium</option>
      <option value="Large">Large</option>
      <option value="Extra Large">Extra Large</option>
    </select>
<br>
<br>
  <label for="product_image">Product Image URL:</label>
  <input type="integer" id="product_image" name="product_image" required>
<br>
<br>
  <input type="submit" value="Create Stock Item">

  </form>
